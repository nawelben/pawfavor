{% block stylesheets %}
  <style>
    .location_home_input:focus{
        outline: none;
        outline-width: 0;
        box-shadow: none !important;
    }

    .location_home_input::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
      color: #333333;
    }

    .index-search-location-item{
      cursor: pointer;
    }

    .index-search-location-item:hover{
      background-color: #EEEEEE;
    }

    .index-search-service-item{
      cursor: pointer
    }
    .index-search-service-item:hover{
      background-color: #EEEEEE;
    }

    .index-search-service-name{
      cursor: pointer;
    }
    .location_home_input{
      cursor: pointer;
    }

    ._trans06{
      transition: .6s all;
    }

    .left{
    	transform: translateX(-200%);
    }

    .right{
    	transform: translateX(200%);
    }

    .r_left{
    	transform: rotateY(0.75turn);
    }

    .r_right{
    	transform: rotateY(-0.75turn);
    }
</style>

