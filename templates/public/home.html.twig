{% block javascripts %}
<script>
  $('body').on('input', '.location_home_input', function(){
    if($(this).val().length > 0){
      $('.index-search').removeClass('d-none');
    }else{
      $('.index-search').addClass('d-none');
    }
  })

  $('body').on('focus', '.location_home_input', function(){
    $('.index-search').removeClass('d-none');
  })


  $('body').on('click', '.index-search-location-item', function(){
    $('.location_home_input').val($(this).attr('data-content'));
    $('.index-search').addClass('d-none');
    $('.__hidden_location').val($(this).attr('data-content'));
  })

  $('body').on('click', '.index-search-service-name', function(){
    if($('.index-search-services').hasClass('d-none')){
      $('.index-search-services').removeClass('d-none')
    }else{
      $('.index-search-services').addClass('d-none')
    }
  })

  $('body').on('click', '.index-search-service-item', function(){
    $('.index-search-service-name').text($(this).attr('data-content'));
    $('.index-search-services').addClass('d-none')
    $('.__hidden_service').val($(this).attr('data-content'));
  })
</script>

<script>
$(window).scroll(function() {

    var OFFSET_LR = 500;



    $('.left,.right,.r_left,.r_right').each(function(){
      var ths=$(this);
      if($(document).scrollTop()>=$(this).offset().top-OFFSET_LR)
        ths.removeClass('left').removeClass('right').removeClass('r_left').removeClass('r_right');
    });





  });
</script>
