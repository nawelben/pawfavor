<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <div class="col-12 pb-1">
          <h4 class="font-weight-bold">Services</h4>
        </div>
        {% for sitterServicePrice in sitterServicePrices %}
        <div class="col-8 pr-4">
          <img src="/img/services_icons/{{sitterServicePrice.service.id}}.svg" alt="bag" class="img-fluid d-inline-block mb-4 pb-1 mr-2 ml-2">
          <div class="d-inline-block">{{sitterServicePrice.service.name|upper}}<br><span class="text-muted">{{sitterServicePrice.service.description}}</span></div>
          <div class="float-right mr-3">$ {{sitterServicePrice.price}} AUD <br><span class="text-muted text-right">/ {{sitterServicePrice.service.unit}}</span></div>
        </div>

        {% else %}
        <div class="col-12 pb-4">
          This sitter does not provide any service yet.
        </div>
        {% endfor %}

        {% if sitterServicePrices %}
          <div class="col-12 pb-2 text-warning font-weight-bold">Holiday rates my be applicable</div>
        {% endif %}


      </div>
      <hr>
    </div>
  </div>

</div>
