<div class="row">
  <div class="col px-0 pt-3">

  <div class="container-fluid py-3 px-0  mt-2">

      {% for booking in completedBookings %}
      <div class="row p-3 ml-2 mb-3 border-card">
        <div class="col">
          <div class="text-warning d-inline-block mr-1">Completed</div>
          <img src="/img/people/{{booking.sitter.picture}}.jpg" alt="p" class="d-inline-block rounded-circle square-60">
        </div>
        <div class="col">
          <div class="d-block">{{booking.sitter.name}}</div>
          <div class="font-weight-bold d-block h5">{{booking.service.name}}</div>
          <div class="d-block">{{booking.start|date("d/m")}}</div>
        </div>
        <div class="col">
          {% for detail in  booking.bookingDetails %}

          <div class="w-50perc d-inline-block py-1">
            {% if detail.pet %}
            <div class=" rounded-circle square-30 img-bg" style="background-image: url('/img/{{detail.pet.picture}}.jpg')"></div>
            {% endif %}
          </div>
            {% if detail.unknownPet %}
            <div><strong>(?) </strong>{{detail.unknownPet}}</div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="col px-0">
          <div class="font-weight-bold d-block">Where</div>
          <div class="d-block">{{booking.sitter.location}}</div>
        </div>
        <div class="col">
          <div class="font-weight-bold d-inline-block">$ {{booking.totalPrice|number_format(0)}} AUD </div>
          <i class="fas fa-chevron-right d-inline-block"></i>
        </div>
      </div>

      {% else %}
        There is no booking in this section.
      {% endfor %}


    </div>

  </div>


</div>
